#include <iostream>
#include <string>
using namespace std;

int main() {

    string nombre;
    int edad;
    float altura;
    double promedio;
    char inicial;
    bool mayorDeEdad;

    cout << "Ingrese su nombre: ";
    cin >> nombre;

    cout << "Ingrese su edad: ";
    cin >> edad;

    cout << "Ingrese su altura (m): ";
    cin >> altura;

    cout << "Ingrese su promedio: ";
    cin >> promedio;

    cout << "Ingrese la inicial de su apellido: ";
    cin >> inicial;

    mayorDeEdad = (edad >= 18);

    cout << "\n--- DATOS INGRESADOS ---" << endl;
    cout << "Nombre: " << nombre << endl;
    cout << "Edad: " << edad << endl;
    cout << "Altura: " << altura << endl;
    cout << "Promedio: " << promedio << endl;
    cout << "Inicial: " << inicial << endl;
    cout << "Mayor de edad: " << mayorDeEdad << endl;

    return 0;
}
