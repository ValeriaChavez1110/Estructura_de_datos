#include <iostream>
#include <cmath>
#include <cstdlib>
using namespace std;

int mayor(int a, int b, int c);
int ciclo(int x);
double pesototal(int cantidadProductos);
double numpares(int n);

int main() {
    int opcion;

    do {
        cout << "Elige una opcion:\n";
        cout << "1. Sumar\n";
        cout << "2. Multiplicar\n";
        cout << "3. Calcular el peso total de productos\n";
        cout << "4. Calcular el promedio de n numeros pares\n";
        cout << "0. Salir\n";
        cout << "Opcion: ";
        cin >> opcion;

        switch (opcion) {
        case 1: {
            int a = 0, b = 0, c = 0;
            cout << "Introduce el primer numero: ";
            cin >> a;
            cout << "Introduce el segundo numero: ";
            cin >> b;
            cout << "Introduce el tercer numero: ";
            cin >> c;
            cout << "La suma es: " << mayor(a, b, c);
            break;
        }
        case 2: {
            int x;
            cout << "Si da un numero positivo, se multiplica por dos" << endl;
            cout << "Si da un numero negativo, se resta menos dos" << endl;
            cout << "Introduce un numero: ";
            cin >> x;
            cout << ciclo(x);
            break;
        }
        case 3: {
            int cantidad;
            cout << "¿Cuantos productos deseas ingresar? ";
            cin >> cantidad;
            cout << "El peso total es: " << pesototal(cantidad) << " gramos\n";
            break;
        }
        case 4: {
            int cantidadn;
            cout << "Cuantos numeros pares desea ingresar? ";
            cin >> cantidadn;
            cout << "El promedio es: " << numpares(cantidadn) << endl;
            break;
        }
        case 0:
            cout << "¡Hasta luego!\n";
            return 0;
        default:
            cout << "Opcion no valida. Intenta de nuevo.\n";
            break;
        }

        cout << endl;
        system("pause");
        system("cls");

    } while (opcion != 0);

    return 0;
}

int mayor(int a, int b, int c) {
    int suma;
    suma = a + b + c;
    return suma;
}

int ciclo(int x) {
    bool esPositivo = (x > 0);

    if (esPositivo) {
        return x * 2;
    }
    else {
        return x - 2;
    }
}

double pesototal(int cantidadProductos) {
    double pesoTotal = 0.0;

    for (int i = 1; i <= cantidadProductos; i++) {
        double peso;
        cout << "Ingresa el peso del producto " << i << " (en gramos): ";
        cin >> peso;
        pesoTotal += peso;
    }

    return pesoTotal;
}

double numpares(int n) {
    double suma = 0;

    for (int i = 1; i <= n; i++) {
        suma += i * 2;
    }

    return suma / n;
}
